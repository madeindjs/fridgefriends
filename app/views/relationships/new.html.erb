<div class="container">
  <div class="row">
    <div class="col-lg-8 col-xs-12" style="padding-bottom: 60px;">
      <div class="friend-header pt-3">
        <div class="col-12 list-relationships tabs-underlined">
          <h3 class="top-bar-dons text-center tab-underlined active relationships">Ajouter un nouvel ami</h3>
        </div>
      </div>
      <div class="logo-friend pt-3 text-center">
        <%=cl_image_tag("friend-icon.png")%>
      </div>
      <div class="form-group pt-5" style="margin-top: -1em;">
        <%= form_tag users_path, method: :get, class: 'input-group', remote: true do %>
          <%= text_field_tag :search,
            params[:search],
            class: "form-control",
            placeholder: "PrÃ©nom, nom ou e-mail"
          %>
          <span>
            <button type="submit" class="btn btn-primary">
              <i class="fa fa-search"></i>
            </button>
          </span>
        <% end %>
        <div id="cards-container" style="margin-top: 1em;">
          <%#= render 'relationships/card', user: User.first %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/relationships_footer' %>
