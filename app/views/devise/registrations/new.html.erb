<div class="container text-center container-session col-lg-12 col-xs-12">
  <div class="row">
    <div class="body-session offset-1 col-10">
      <div class="title-session-signup">
        S'inscrire à Fridge Friends
      </div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

      <div class="form-inputs">
        <div id="text-form-session-signup">
        <%= f.input :first_name,
                    label: "Prénom",
                    placeholder: "Jean",
                    required: true,
                    autofocus: true %>

        <%= f.input :last_name,
                    label: "Nom",
                    placeholder: "Michel",
                    required: true,
                    autofocus: true %>

        <%= f.input :address,
                    label: "Adresse",
                    placeholder: "Rue du don, 00000 Maville",
                    required: true,
                    autofocus: true %>

        <%= f.input :email,
                    label: "E-mail",
                    placeholder: "jm@email.fr",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>


        <%= f.input :password,
                    label: "Mot de passe",
                    placeholder: "********",
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>

        <%= f.input :password_confirmation,
                    label: "Confirmer le mot de passe",
                    placeholder: "********",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>

        <%= f.file_field :avatar %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Valider", id: "btn-form-session-signup" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

