<div class="container text-center container-session col-lg-12 col-xs-12">
  <div class="row">
    <div class="body-session offset-1 col-10">

        <div class="logo-session">
          <%=cl_image_tag("fridge.png")%>
        </div>

        <div class="title-session">Fridge Friends</div>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div id="text-form-session">

          <%= f.input :email,
                      label: "E-mail",
                      placeholder: "jm@email.fr",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      label: "Mot de passe",
                      placeholder: "********",
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
            <div id="remember-me">
              <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
            </div>

          </div>
        </div>

        <div class="form-actions" >
          <%= f.button :submit, "Se connecter", id: "btn-form-session" %>
        </div>
        <% end %>
      </div>
    </div>
</div>

<%#= render "devise/shared/links" %>
